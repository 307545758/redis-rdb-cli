#!/usr/bin/env bash

if type -P java &>/dev/null; then
    _java=java
elif [[ -n "$JAVA_HOME" ]] && [[ -x "$JAVA_HOME/bin/java" ]]; then
    _java="$JAVA_HOME/bin/java"
else
    echo "no found java."
fi

if [[ "$_java" ]]; then
    version=$("$_java" -version 2>&1 | awk -F '"' '/version/ {print $2}')
    if [[ "$version" < "1.8" ]]; then
        echo "java -version is less than 1.8"
    fi
fi

base_dir="$(dirname "$(readlink -f "$0")")"/..

lib_dir="$base_dir"/lib
log_dir="$base_dir"/log
con_dir="$base_dir"/conf

log_file="$con_dir"/log4j2.xml
con_file="$con_dir"/cli.conf

for file in "$lib_dir"/*.jar;
do
    CLASSPATH="$CLASSPATH":"$file"
done

ulimit -n 65535

export CLASSPATH

$_java -server -Xms512m -Xmx512m -Xss2m -XX:NewRatio=2 -XX:+UseGCOverheadLimit -XX:-UseParallelGC -XX:ParallelGCThreads=24 -Dlog4j.configurationFile=${log_file} -Dcli.log.path=${log_dir} -Dconf=${con_file} com.moilioncircle.redis.cli.tool.Rct $@
